@{
    ViewData["Title"] = "ViewReset_Password";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Forgot Password | Stock MS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            min-height: 100vh;
            background: #f4f6f9;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .forgot-container {
            width: 100%;
            max-width: 900px;
            background: #fff;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .left-panel {
            background: #7a3ff2;
            color: #fff;
            padding: 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .left-panel h2 {
                font-weight: bold;
            }

        .right-panel {
            padding: 50px;
        }

        .btn-purple {
            background: #7a3ff2;
            border: none;
        }

            .btn-purple:hover {
                background: #6a2ee0;
            }

    </style>
</head>
<body>

    <div class="forgot-container row g-0">

        <!-- LEFT -->
        <div class="col-md-6 left-panel">
            <h2>Forgot Password?</h2>
            <p class="mt-3">
                Don’t worry! Enter your email and we’ll help you reset your password.
            </p>
        </div>

        <!-- RIGHT -->
        <div class="col-md-6 right-panel">
            <h3 class="mb-3">Reset Password</h3>
            <p class="text-muted">Please enter your registered email.</p>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Email address</label>
                    <input type="email" class="form-control" placeholder="example@gmail.com" required>
                </div>

                <button type="submit" class="btn btn-purple w-100 text-white">
                    Send Reset Link
                </button>

                <div class="text-center mt-3">
                    <a asp-controller="Login" asp-action="ViewLogin" class="text-decoration-none text-muted">
                        ← Back to Login
                    </a>
                </div>
            </form>
        </div>

    </div>

</body>
</html>
