@{
    ViewData["Title"] = "ViewDashboard";
}

<link href="~/css/dashboard.css" rel="stylesheet" />
<style>
    
</style>

<div class="main">



    <section class="stats mt-3 mb-1">
        <div class="stat">
            <div>
                <small>Total Product</small>
                <h2>50</h2>
            </div>
            <div class="divider"></div>
            <div class="icon">
                <svg width="24" height="24"><path d="M3 13h4v8H3zM10 6h4v15h-4zM17 3h4v18h-4z" fill="rgba(123,63,242,0.9)" /></svg>
            </div>
        </div>

        <div class="stat">
            <div>
                <small>Total Inventory</small>
                <h2>812045</h2>
            </div>
            <div class="divider"></div>
            <div class="icon">
                <svg width="24" height="24"><rect x="3" y="3" width="18" height="14" rx="2" fill="rgba(123,63,242,0.9)" /></svg>
            </div>
        </div>

        <div class="stat">
            <div>
                <small>Low Stock Item</small>
                <h2>1</h2>
            </div>
            <div class="divider"></div>
            <div class="icon">
                <svg width="24" height="24"><circle cx="12" cy="12" r="9" fill="rgba(123,63,242,0.9)" /></svg>
            </div>
        </div>

        <div class="stat">
            <div>
                <small>Pending Transfer</small>
                <h2>0</h2>
            </div>
            <div class="divider"></div>
            <div class="icon">
                <svg width="24" height="24"><path d="M3 12h18" stroke="rgba(123,63,242,0.9)" stroke-width="2" /></svg>
            </div>
        </div>
    </section>

    <section class="cards">
        <div class="card">
            <h6>Monthly Inventory Analysis</h6>
            <div class="chart-wrap mt-3"><canvas id="barChart"></canvas></div>
        </div>

        <div class="card">
            <div class="d-flex justify-content-between align-items-center">
                <h6>Top Moving Category</h6>
                <select class="select-sm">
                    <option>By Volume</option>
                    <option>By Value</option>
                </select>
            </div>
            <div class="chart-wrap d-flex align-items-center justify-content-center mt-3">
                <canvas id="doughnutChart" width="260" height="260"></canvas>
            </div>
        </div>
    </section>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        const barCtx = document.getElementById('barChart').getContext('2d');
        new Chart(barCtx, {
            type: 'bar',
            data: {
                labels: ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'],
                datasets: [
                    { data: [30,40,35,45,50,48,45,50,52,55,60,50], backgroundColor:'rgba(84,41,180,0.95)' },
                    { data: [20,22,25,18,22,20,24,18,20,22,18,20], backgroundColor:'rgba(123,63,242,0.8)' },
                    { data: [18,20,15,12,13,14,10,12,15,14,12,15], backgroundColor:'rgba(178,139,255,0.6)' }
                ]
            },
            options: {
                maintainAspectRatio: false,
                plugins:{ legend:{ display:false }},
                scales:{
                    x:{ grid:{display:false}},
                    y:{ grid:{color:'#f1f5f9'}}
                }
            }
        });

        const doughCtx = document.getElementById('doughnutChart').getContext('2d');
        new Chart(doughCtx, {
            type: 'doughnut',
            data:{
                labels:['Red','Blue','Green','Orange','Yellow'],
                datasets:[{
                    data:[30,20,18,16,16],
                    backgroundColor:['#ff6b6b','#3b82f6','#10b981','#f59e0b','#f97316']
                }]
            },
            options:{
                cutout:'72%',
                plugins:{ legend:{ display:false }}
            }
        });
    </script>
}


